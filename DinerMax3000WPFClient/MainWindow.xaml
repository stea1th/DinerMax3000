<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinerMax3000WPFClient"
        xmlns:WPFClient="clr-namespace:DinerMax3000.WPFClient" x:Class="DinerMax3000WPFClient.MainWindow"
        mc:Ignorable="d"
        Title="Diner Max 3000" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Window.DataContext>
        <WPFClient:DinerMax3000ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <ComboBox ItemsSource="{Binding AllMenus}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedMenu}"/>
            <DataGrid ItemsSource="{Binding SelectedMenu.Items}"/>
            <Separator />
            <WrapPanel>
                <Label>Title:</Label>
                <TextBox Width="150" Text="{Binding NewMenuItem.Title}"></TextBox>
                
                <Label>Price:</Label>
                <TextBox Width="50" Text="{Binding NewMenuItem.Price}" ></TextBox>
            </WrapPanel>
            <Separator />
            <Label>Description:</Label>
            <TextBox Text="{Binding NewMenuItem.Description}"></TextBox>
            
        </StackPanel>
    </Grid>
</Window>
